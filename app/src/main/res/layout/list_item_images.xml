<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipes_recyclerView_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/list_item_image_double_margin"
    android:layout_marginStart="@dimen/list_item_image_standard_margin"
    android:layout_marginLeft="@dimen/list_item_image_standard_margin"
    android:layout_marginEnd="@dimen/list_item_image_standard_margin"
    android:layout_marginRight="@dimen/list_item_image_standard_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal">

    <com.santalu.aspectratioimageview.AspectRatioImageView
        android:id="@+id/list_item_profiles_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item_image_height"
        android:scaleType="centerCrop"
        app:ari_aspect="width"
        app:ari_ratio="1.3"
        android:contentDescription="@string/image"
        app:srcCompat="@drawable/ic_image_not_available"/>

</android.support.constraint.ConstraintLayout>