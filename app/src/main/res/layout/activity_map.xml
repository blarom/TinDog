<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/activity_map"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MapActivity" >

    <fragment android:id="@+id/map"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/map_add_fab"
        android:layout_gravity="bottom|end"
        android:layout_height="@dimen/fab_button_size"
        android:layout_width="@dimen/fab_button_size"
        android:layout_marginEnd="@dimen/fab_button_standard_margin"
        android:layout_marginRight="@dimen/fab_button_standard_margin"
        android:layout_marginBottom="@dimen/fab_button_extra_margin"
        android:elevation="@dimen/fab_button_default_elevation"
        app:fabSize="normal"
        app:pressedTranslationZ="@dimen/fab_button_default_translation"
        android:contentDescription="@string/add_marker_to_map"
        app:srcCompat="@drawable/ic_add_24dp"/> <!--translation 6dp added to initial elevation at 6dp-->

</FrameLayout>