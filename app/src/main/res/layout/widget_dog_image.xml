<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/widget_dog_image_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/widget_text_height"
        android:contentDescription="@string/dog_main_image"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_image_not_available"/>

    <TextView
        android:id="@+id/widget_dog_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_text_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/appwidget_text"
        android:contentDescription="@string/dog_name"
        android:textColor="#ffffff"
        android:textSize="@dimen/widget_text_size"
        android:textStyle="bold|italic"/>

</RelativeLayout>